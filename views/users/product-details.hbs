<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
        <link rel="stylesheet" href="../../public/endpage.css">
        <link rel="stylesheet" href="../../public/usernav.css">   
        <style>
            @import url('https://fonts.googleapis.com/css2?family=Anek+Devanagari:wght@100..800&family=Bebas+Neue&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap');

            * {
                box-sizing: border-box;
                margin: 0;
                padding: 0;
            }

            body {
                display: flex;
                flex-wrap: wrap;
                justify-content: center;
                background-color: #fff1ed;
                font-family: 'Anek Devanagari';
            }

            .productContent {
                margin-top: 10vh;
                width: 88vw;
                height: 62vh;
                display: flex;
                border-radius: 10px;
                background-color: white;
                font-weight: bolder;
                font-family: 'Montserrat';
                font-size: larger;
            }

            .productContent-1 {
                display: flex;
                width: 100%;
            }

            .name {
                font-size: 2rem;
                display: flex;
                flex-direction: column;
            }

            .image {
                height: 100%;
                width: 44%;
                padding: 4vh;
            }

            img {
                height: 100%;
                width: 100%;
                border-radius: 5px;
            }

            .abc {
                display: flex;
                flex-direction: column;
                margin-left: 60px;
                width: 100%;
                justify-content: space-evenly;
                padding-left: 2vw;
            }

            .review-section {
                margin-top: 10vh;
                width: 80vw;
                margin-bottom: 10vh;
            }

            textarea {
                width: 80vw;
                height: 20vh;
                border-radius: 10px;
                resize: none;
                padding: 2vh;
                font-size: 1.2rem;
            }

            .h2 {
                font-size: 2.4rem;
            }

            hr {
                margin: 0;
                width: 35vw;
                height: 3px;
                background-color: grey;
                border: none;
                margin-top: 1vh;
                border-radius: 10%;

            }

            .cartButton {
                height: 40px;
                width: 200px;
                font-weight: bold;
                font-size: 1.1rem;
                border-radius: 14px;
                border: 1px solid;
                background-color: black;
                color: white;
                cursor: pointer;
                margin-top: 0.7vh;
            }

            .cartButton:hover {
                background-color: rgb(64, 63, 63);
                color: white;
                border: 2px solid black;
            }

            .reviewBtn,
            .submitReview {
                height: 35px;
                width: 180px;
                font-weight: bold;
                font-size: 1.1rem;
                border-radius: 14px;
                border: 1px solid;
                background-color: black;
                color: white;
                margin-bottom: 2vh;

            }

            .price {
                font-size: 35px;
                padding-bottom: 3.5vh;
            }

            .stock {
                font-size: 1.3rem;
                color: green;
                font-weight: 800;
            }

            .lowerdetails {
                padding-top: 10vh;
            }

            .endpage {
                width: 100vw;
            }
            .desc{
                width: 600px;
                overflow-wrap: break-word;
            }
            .navbarrr{
                width: 100%;
            }
        </style>

    </head>

    <body>
        <div class="navbarrr">{{>usernavbar}}</div>
        <div class="productContent">
            <div class="productContent-1">
                <div class="image">
                    <img height="300px" src={{product.imageUrl}}></img>
                </div>
                <div class="abc">
                    <div class="upperdetails">
                        <div class="category">
                            {{product.category}}
                        </div>
                        <div class="name">
                            {{product.name}}
                            <hr>
                        </div>
                    </div>

                    <div class="price">
                        &#8377;<span>{{product.price}}</span>
                        <h2 class="stock h2">IN STOCK</h2>

                    </div>
                    <div class="desc">
                        {{product.description}}
                    </div>
                    <div class="lowerdetails">
                        <div class="seller">Seller : <span> {{product.seller}}</span></div>
                        {{!-- <div class="date">Date: <span>Date {{product.date}}</span></div> --}}

                        <div class="addtocart"><a href="/user/cart/add/{{product._id}}"><button class="cartButton">Add
                                    to Cart</button></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>

        </div>
        <div class="review-section">
            {{!-- <div class="review-section-header">
                <div>
                    <h2 class="h2">Reviews</h2>
                </div>
                <button class="reviewBtn">Add a Review</button>
            </div> --}}

            <form action="/user/review/add" method="post">
    <div class="review-section-details hide">
        <textarea cols="40" rows="5" type="text" name="review" id="review" placeholder="Enter a review"></textarea>
        <button class="submitReview" type="submit">Submit Review</button>
        <input type="hidden" name="productId" value="{{product._id}}">
    </div>
</form>

            {{>reviewSection product=product}}
        </div>

        {{>endpage}}

        <script>
            document.querySelector(".reviewBtn").addEventListener('click', (ev) => {
                ev.preventDefault();
                document.querySelector(".review-section-details").classList.toggle('hide');
            })

            document.querySelector('.submitReview').addEventListener('click', (ev) => {
                ev.preventDefault();
                let review = document.querySelector('#review').value.trim();
                console.log(review);
                let id = ev.target.nextElementSibling.innerText;
                console.log(id);
                axios.post('/user/review/add', {
                    review,
                    productId: id
                }).then(({ data }) => {
                    // console.log(data);
                    document.querySelector('.user-reviews').innerText = "";
                    data.reviews.forEach(r => {
                        let li = document.createElement('li');
                        li.innerText = r.details;
                        document.querySelector('.user-reviews').appendChild(li);
                    });
                })
                document.querySelector(".review-section-details").classList.toggle('hide');
            })
        </script>

    </body>

</html>